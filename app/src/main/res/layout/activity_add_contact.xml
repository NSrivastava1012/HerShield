<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Top Image (Fixed) -->
    <ImageView
        android:id="@+id/imgTop"
        android:layout_width="179dp"
        android:layout_height="101dp"
        android:src="@drawable/top_image"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <!-- Header (Fixed) -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Add Contacts"
        android:textSize="24sp"
        android:textColor="#D9D9D9"
        android:fontFamily="@font/kaushan_script"
        android:gravity="center"
        android:background="@drawable/header_gradient"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable Contacts -->
    <ScrollView
        android:id="@+id/scrollContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Contact 1 -->
            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name 1"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etName1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Name"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvPhone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number 1"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPhone1"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Contact 2 -->
            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name 2"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etName2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Name"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number 2"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPhone2"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Contact 3 -->
            <TextView
                android:id="@+id/tvName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name 3"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etName3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Name"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvPhone3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number 3"
                android:textSize="20sp"
                android:fontFamily="@font/kaushan_script"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPhone3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:background="@drawable/edittext_gradient"
                android:padding="16dp"
                android:fontFamily="@font/kaushan_script"
                android:textColorHint="#93000000"
                android:textColor="#000000"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:text="Submit"
                android:textColor="#E2D0F2"
                android:textSize="25sp"
                android:fontFamily="@font/kaushan_script"
                android:background="@drawable/bg_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
